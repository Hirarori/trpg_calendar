<p id="notice"><%= notice %></p>

<h1>予定一覧</h1>

<table class="events-index"">
  <thead>
    <tr>
      <th>予定名</th>
      <th>開始時刻</th>
      <th>終了時刻</th>
      <th colspan="2"></th>
    </tr>
  </thead>

  <tbody>
    <% @events.each do |event| %>
      <tr>
        <td><%= event.title %></td>
        <td><%= event.start_date %></td>
        <td><%= event.end_date %></td>
        <td><%= link_to '詳細', event, class: 'btn btn-default' %></td>
        <td><%= link_to '削除', event, class: 'btn btn-default', method: :delete, data: { confirm: '本当に削除しますか？' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>
<h2><%= link_to '予定作成', new_event_path, class: 'btn btn-default'%></h2>
