<% provide(:title, current_user.nickname) %>
<div class="row">
  <aside class="col-xl-4">
    <section class="user_info">
      <%if user_signed_in? %>
        <h2><%=current_user.nickname%></h2>
        <h2><%=image_tag "#{current_user.image}", :class => "twitter-image"%></h2>
        <h2><%= link_to "予定一覧", events_path, class: 'btn btn-default'%>
        <%= link_to "予定作成", new_event_path, class: 'btn btn-default'%></h2>
        <div id="calendar"></div>
        <h2><%= link_to "ログアウト", destroy_user_session_path, class: 'btn btn-default', method: :delete %></h2>
      <%else%>
        <h2><%= link_to "ログイン", new_user_session_path, class: 'btn btn-default'%></h2>
      <%end%>
    </section>
  </aside>
</div>
