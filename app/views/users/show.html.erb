<% provide(:title, current_user.nickname) %>
<div class="row">
  <aside class="col-md-4">
    <section class="user_info">
      <%if user_signed_in? %>
        <h2><%=current_user.nickname%></h2>
        <h2><%=image_tag "#{current_user.image}"%></h2>
        <h2><%= link_to "ログアウト", destroy_user_session_path, class: 'btn btn-default', method: :delete %></h2>
      <%else%>
        <h2><%= link_to "ログイン", new_user_session_path, class: 'btn btn-default'%></h2>
      <%end%>
    </section>
  </aside>
</div>